generator client {
  provider = "prisma-client"
  output   = "../lib/generated/prisma"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

enum Role {
  SUPER_ADMIN
  ADMIN
  HRD
  KARYAWAN
}

model User {
  id       String  @id @default(cuid())
  username String  @unique
  password String
  name     String?
  image    String?
  role     Role    @default(KARYAWAN)

  @@map("user")
}
